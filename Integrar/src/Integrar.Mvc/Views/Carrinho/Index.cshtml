@model Integrar.Mvc.ViewModels.CarrinhoViewModel
@using Integrar.Domain.Entities
@{
    ViewData["Title"] = "Carrinho";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="panel">
        <div class="panel panel-heading">
            <h3>@Model.Mensagem</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>prou </th>
                        <th>Valor</th>
                        <th>Estoque</th>
                        <th>Validade</th>
                        <th>Ativo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto prod in Model.Produtos)
                    {
                        <tr>
                            <td>@prod.Nome</td>
                            <td>@prod.Valor</td>
                            <td>@prod.Estoque</td>
                            <td>@prod.Validade</td>
                            <td>@prod.Ativo</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td><strong>Total</strong></td>
                        <td>@Model.TotalCarrinho</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


